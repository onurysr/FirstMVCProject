@model LoginViewModel

@{
    ViewBag.Title = "Giriş";
}
<!--====== Page Title start ======-->
<partial name="Partials/_PageTitlePartial" />
<!--====== Page Title End ======-->
<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
    <div class="container">
        <div class="user-actions mb-40">
            <p>Hesabınız yok mu? <a asp-controller="Account" asp-action="Register">Hesap Açmak için tıklayınız.</a></p>
        </div>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="billing-details">
                        <h3 class="title">Giriş</h3>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="UserName"></label>
                                    <input asp-for="UserName">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label asp-for="RememberMe"></label>
                                    <input asp-for="RememberMe" />
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="payment-box mt-30">
                                    <input type="submit" class="btn btn-success" value="Giriş" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Styles{
    <style>
        input {
            border: solid 1px #e3eeff;
            height: 50px;
            padding: 15px;
        }
    </style>
}
