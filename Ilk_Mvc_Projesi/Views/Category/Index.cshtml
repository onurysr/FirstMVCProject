@model List<Category>
@{
    var silinecekMesaj = @TempData["Silinen_Kategori"]?.ToString();
}
@if (!string.IsNullOrEmpty(silinecekMesaj))
{
    <h3 class="text-danger">@silinecekMesaj isimli Kategori Silindi</h3>
}
<a asp-action="Create" asp-controller="Category" class="btn btn-success">Kategori Ekle</a>
<div class="row">
    <div class="col-9">
        <table class="table-bordered">
            <thead>
                <tr>
                    <th>Kategori Adi</th>
                    <th>Aciklama</th>
                    <th>Urun sayisi</th>
                    <th>Detay</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>@item.Products.Count</td>
                    <td><a class="btn btn-block btn-success" asp-controller="Category" asp-action="Detail" asp-route-id="@item.CategoryId">Detay</a></td> @*Önemliiiiiiiiii*@
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>