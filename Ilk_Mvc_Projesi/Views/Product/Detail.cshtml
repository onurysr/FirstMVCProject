@model Product

<h1>@Model.ProductName</h1>
<h3>@Model.UnitPrice</h3>


<a asp-controller="Product" asp-action="Delete" asp-route-productId="@Model.ProductId" class="btn btn-danger">Ürün Sil</a>

<a asp-controller="Product" asp-action="Update" asp-route-id="@Model.ProductId" class="btn btn-danger">Ürün Güncelle</a>

<div class="row">
    <div class="col-9">
        <table class="table-bordered">
            <thead>
                <tr>
                    <th>Kategori Adı</th>
                    <th>Ürün Adı</th>
                    <th>Fiyat</th>
                    <th>Stok Sayısı</th>
                    <th>Üretici Adı</th>
                    <th>Detay</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Category.Products)
                {
                    <tr>
                        <td>@item.Category.CategoryName</td>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.UnitsInStock</td>
                        <td>@item.Supplier.CompanyName</td>
                        <td><a asp-controller="Product" asp-action="Detail" asp-route-id="@item.ProductId" class="btn btn-block btn-primary">Detay</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



